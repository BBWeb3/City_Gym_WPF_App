                    <TextBlock HorizontalAlignment="Left" Margin="289.667,10,0,0" TextWrapping="Wrap" Text="***Output Class Name" VerticalAlignment="Top" Width="145" Height="21"/>
                    <TextBlock HorizontalAlignment="Left" Margin="522.667,10,0,0" TextWrapping="Wrap" Text="***Output Instructor Name" VerticalAlignment="Top" Width="145" Height="21"/>
