                    <ListView.View>
                        <GridView>
                            <GridViewColumn/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </GroupBox>
            <Button Content="Enrol Member" HorizontalAlignment="Left" Margin="246,10,0,0" VerticalAlignment="Top" Width="113" Height="25" Background="#FF3CE2E2"/>
